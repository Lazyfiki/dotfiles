#!/usr/bin/env nix-shell
#!nix-shell -i bash -p alejandra

set -e

host="legionpro"
path=$HOME/.dotfiles/nixos/

$EDITOR $path/hosts/legionpro/configuration.nix

pushd $path

if git diff --quiet '*.nix'; then
    echo "No changes detected, exiting."
    popd
    exit 0
fi

alejandra . &>/dev/null \
  || ( alejandra . ; echo "formatting failed!" && exit 1)

git diff -U0 '*.nix'

echo "NixOS Rebuilding..."

sudo nixos-rebuild switch --flake "$path#$host" | tee nixos-switch.log || (cat nixos-switch.log | grep --color error && exit 1)

current=$(nixos-rebuild list-generations --flake "$path#$host" | grep current)

git commit -am "$current"

popd

notify-send -e "NixOS Rebuilt OK" --icon=system-software-update
