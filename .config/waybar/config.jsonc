{
    "layer": "top",
    "margin": 0,
    "spacing": 25,
    "border-size": 0,
    "modules-left": [
        "custom/launcher",
        "hyprland/window",
    ],
    "modules-right": [
        "group/expand",
        "hyprland/workspaces",
        "custom/weather",
        "network",
        "bluetooth",
        "pulseaudio",
        "battery",
        "tray",
        "clock"
    ],
    "clock": {
        "format": "{:%b %d %I:%M%p}",
        "interval": 1,
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "format": {
                "today": "<span background='#ffffff' color='#000000'><b>{}</b></span>"
            }
        },
        "on-click": "swaync-client -t -sw"
    },

    "hyprland/workspaces": {
        "active-only": true,
    },

    "hyprland/window": {
        "format": "{initialTitle}",
        "max-length": 20,
        "rewrite": {
            "^(?!.*\\S).*": "Finder"
        }
    },
    "custom/launcher": {
        "format": "Óúë"
    },
    "network": {
        "format-wifi": "Ôá´ ",
        "format-ethernet":"Óºâ",
        "format-disconnected": "Ó¨Å",
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´ ",
        "tooltip-format-ethernet": "{ifname} üñß ",
        "on-click": "ghostty --class=com.connection.editor -e nmtui"
    },
    "bluetooth": {
        "format-on": "Û∞ÇØ",
        "format-off": "BT-off",
        "format-disabled": "Û∞Ç≤",
        "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
        "format-alt": "{device_alias} Û∞ÇØ",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
        "on-click-right": "blueman-manager"
    },
    "custom/weather": {
        "exec": "~/.config/waybar/scripts/wttr.sh",
        "interval": 600,
    },
    "battery": {
        "interval":30,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Û∞ÇÑ",
        "format-plugged": "{capacity}% Û∞ÇÑ Ó¨≠",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ],
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}",
        "format-muted": "Û∞ùü",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/expand": {
        "format": "ÔÑÑ",
        "tooltip": false
    },
    "custom/endpoint":{
        "format": "|",
        "tooltip": false
    },
    "group/expand": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 600,
            "transition-to-left": true,
            "click-to-reveal": true
        },
        "modules": ["custom/expand","cpu","memory","temperature","custom/endpoint"]
    }
}
