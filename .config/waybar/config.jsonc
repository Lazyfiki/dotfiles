{
    "layer": "top",
    "margin": 0,
    "spacing": 25,
    "border-size": 0,
    "modules-left": [
        "custom/launcher",
        "hyprland/window",
    ],
    "modules-right": [
        "group/expand",
        "hyprland/workspaces",
        "custom/weather",
        "backlight",
        "network",
        "bluetooth",
        "pulseaudio",
        "battery",
        "clock",
    ],

    "clock": {
        // "format": "{:%b %d %I:%M%p}",
        "format": "{:%a %b %d %I:%M}",
        "interval": 1,
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "format": {
                "today": "<span background='#ffffff' color='#000000'><b>{}</b></span>"
            }
        },
        "on-click": "swaync-client -t -sw"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-alt": "{percent}% {icon}",
        "format-icons": [""],
        "tooltip-format": "{percent}% {icon}"
    },

    "hyprland/workspaces": {
        "active-only": true,
    },

    "hyprland/window": {
        "format": "{initialTitle}",
        "on-click": "activate",
        "max-length": 200,
        "rewrite": {
            "^(?!.*\\S).*": "Finder"
        }
    },
    "custom/launcher": {
        // "format": "", // aparture since
        "format": "", // pixel art thingy
        "tooltip": false,
        "on-click": "/home/ahmed/.config/rofi/system-action.sh"
    },
    "network": {
        "format-wifi": "<span font_family='Font Awesome 6 Pro'></span>",
        "format-ethernet":"",
        "format-disconnected": "",
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)  ",
        "tooltip-format-ethernet": "{ifname}  ",
        "on-click": "ghostty --class=com.connection.editor -e nmtui"
    },
    "bluetooth": {
        "format-on": "<span font_family='Font Awesome 6 Pro'></span>",
        "format-off": "BT-off",
        "format-disabled": "",
        "format-connected-battery": "{device_battery_percentage}% 󰂯",
        "format-alt": "{device_alias}󰂯",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
        "on-click-right": "blueman-manager"
    },
    "custom/weather": {
        "exec": "~/.config/waybar/scripts/weather.sh",
        "interval": 600,
    },
    "battery": {
        "interval":30,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{capacity}% <span font_family='Font Awesome 6 Pro' size='16000' rise='-1600'>{icon}</span>",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% 󰂄 ",
        "format-alt": "<span font_family='Font Awesome 6 Pro' size='16000' rise='-1600'>{icon}</span>",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
        ],
    },
    "pulseaudio": {
        "format": "<span font_family='Font Awesome 6 Pro Solid'>{icon}</span>",
        "format-alt": "{volume}% {<span font_family='Font Awesome 6 Pro Solid'>{icon}</span>icon}",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon}",
        "format-muted": "<span font_family='Font Awesome 6 Pro Solid'></span>",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", "", ""]
        },
        "on-click-right": "pavucontrol"
    },
    "custom/expand": {
        "format": " ",
        // "format-alt": " v",
        "tooltip": false
    },
    "custom/endpoint":{
        "format": "| ",
        "tooltip": false
    },
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },

    "group/expand": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 600,
            "transition-to-left": true,
            "click-to-reveal": true,
        },
        "modules": [
            "custom/expand",
            "custom/endpoint",
            "tray",
        ],
    }
}
